<div class="container">
  <div class="row">
    <div class="col-sm-2 col-sm-offset-4">
      <h1>My Blargh</h1>
    </div>
  </div>
  <div id="new-blog-post">
    <h3>New blog post</h3>
    {{input id="new-blog-title-input" value=newBlogTitle placeholder="Title"}}<br>
    {{textarea id="new-blog-main-text" value=newBlogMainText placeholder="Body of blog post goes here"}}
    <br>
    <button id="create-button" {{action 'createBlogPost' newBlogTitle newBlogMainText}}>Create</button>
  </div>
  {{#each model as |blogPost|}}
    <div class='blog-post'>
      <h3>{{blogPost.blogPostTitle}}</h3>
      <p>{{blogPost.blogPostEntry}}</p>
      <button class="delete-button" {{action 'deleteBlogPost' blogPost}}>Delete</button>
    </div>
  {{/each}}
</div>
